{
	"manifest_version": 3,
	"name": "Chrome插件demo",
	"version": "1.0",
	"description": "最简单的Chrome插件demo，需要快速做一个简单的插件时可以基于这个仓库开发",
	"author": "sxei",
	"icons":
	{
		"48": "icon.png",
		"128": "icon.png"
	},
	"action": 
	{
		"default_icon": {
			"16": "icon.png",
			"24": "icon.png",
			"32": "icon.png"
		},
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.cmechina.net/*"
			],
			"js": [
				"content-script.js"
			]
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"inject-script.js"
			],
			"matches": [
				"https://www.cmechina.net/*"
			]
		}
	],
	"background": {
		"service_worker": "background.js"
	},
	"permissions": [
		"storage",
		"declarativeNetRequestWithHostAccess"
	]
}